# Базовый образ для [Node.js](Node.js)
FROM node:18-alpine

# Рабочий каталог внутри контейнера
WORKDIR /usr/src/app

# Копирование файлов пакета и установка зависимостей
COPY package*.json ./
RUN npm ci

# Копирование остальных файлов проекта
COPY . .

# Команда для запуска приложения
CMD [ "npm", "start" ]

# Порт на котором запускается приложение
EXPOSE 3005